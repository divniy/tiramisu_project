  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :development, :test do
  gem 'rspec-rails',        '~> 2.8.1'
  gem 'factory_girl_rails', '~> 1.6.0'
end

group :test do
  gem 'webrat', '~> 0.7.3'
  gem 'spork',  '~> 0.9.0'
end

